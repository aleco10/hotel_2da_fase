    <Button
        android:id="@+id/Button01"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/Hoteles"
        android:layout_below="@+id/Hoteles"
        android:layout_marginTop="16dp"
        android:background="@drawable/fondo_boton"
        android:onClick="fin"
        android:text="Salir"
        android:textColor="#fff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Hoteles"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/Buscar"
        android:layout_below="@+id/Buscar"
        android:layout_marginTop="14dp"
        android:background="@drawable/fondo_boton"
        android:onClick="hoteles"
        android:text="Hoteles"
        android:textColor="#fff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Buscar"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/Login"
        android:layout_below="@+id/Login"
        android:layout_marginTop="16dp"
        android:background="@drawable/fondo_boton"
        android:onClick="buscar"
        android:text="Buscar Hoteles"
        android:textColor="#fff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/fondo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:background="@drawable/fondo_boton"
        android:onClick="Inicio"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="20dp" />

</RelativeLayout>
