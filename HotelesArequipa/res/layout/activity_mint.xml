<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hotelesarequipa.Mint"
    android:background="@drawable/fondo_2">
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/Hotel0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ima1" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/Hotel0"
        android:layout_below="@+id/Hotel0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/editText1"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:text="Tierra Viva Hoteles fue creada sólo para usted, un viajero moderno que disfruta de la aventura y de comfort. Es por eso que ofrecemos las mejores ubicaciones, conexión Wi -Fi gratuita y desayuno, un servicio excepcional y, sobre todo , el mejor precio garantizado. No esperes más y reserve ya su hotel "
                android:textStyle="bold"
                android:textColor="#fff" />
            
        </LinearLayout>

    </ScrollView>
    <!--
    <TextView
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/Hotel0"
        android:layout_below="@+id/Hotel0"
        android:ems="10"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:text="Tierra Viva Hoteles fue creada sólo para usted, un viajero moderno que disfruta de la aventura y de comfort. Es por eso que ofrecemos las mejores ubicaciones, conexión Wi -Fi gratuita y desayuno, un servicio excepcional y, sobre todo , el mejor precio garantizado. No esperes más y reserve ya su hotel " >

        <requestFocus >
        </requestFocus>
    </TextView>
-->

    <Gallery
        android:id="@+id/gallery1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scrollView2"
        android:layout_below="@+id/scrollView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
         />

    <Button
        android:id="@+id/Pagina"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/gallery1"
        android:layout_marginTop="24dp"
        android:text="Ver Pagina" 
        android:textColor="#fff"
        android:background="@drawable/fondo_boton"/>
    
    <Button
        android:id="@+id/puntuar"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ratingBar1"
        android:text="0.0" 
        android:textColor="#fff"
        android:background="@drawable/fondo_boton"/>

    <Button
        android:id="@+id/llamar"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/Reservar"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Reservar"
        android:text="Llamar"
        android:textColor="#fff"
        android:background="@drawable/fondo_boton" />

    <Button
        android:id="@+id/Reservar"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/Pagina"
        android:layout_alignBottom="@+id/Pagina"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/Pagina"
        android:text="Reservar"
        android:textColor="#fff"
        android:background="@drawable/fondo_boton" />

    <Button
        android:id="@+id/Ubicacion"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/llamar"
        android:layout_alignBottom="@+id/llamar"
        android:layout_alignLeft="@+id/Pagina"
        android:layout_toLeftOf="@+id/llamar"
        android:text="Ver Mapa"
        android:textColor="#fff"
        android:background="@drawable/fondo_boton" />
    
    <Button
        android:id="@+id/Email"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/Mensaje"
        android:layout_alignBottom="@+id/Mensaje"
        android:layout_alignLeft="@+id/Pagina"
        android:layout_toLeftOf="@+id/llamar"
        android:text="Email"
        android:onClick="Emails"
        android:textColor="#fff"
        android:background="@drawable/fondo_boton" />
    <Button
        android:id="@+id/Mensaje"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/Reservar"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/llamar"
        android:text="Mensajes"
        android:onClick="Mensaje" 
        android:textColor="#fff"
        android:background="@drawable/fondo_boton"/>

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Mensaje"
        android:layout_centerHorizontal="true" />
    
        </RelativeLayout>
    
    </ScrollView>

    
    
</RelativeLayout>
